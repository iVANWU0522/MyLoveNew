<div class="row">
  <h1>Posts</h1>
  <%= link_to 'New', new_post_path, :class => 'btn btn-mini' %>
  <p></p>
  <ul class="thumbnails files">
    <% @posts.each do |post| %>
      <li class="span4" id="post_<%= post.id %>">
        <div class="thumbnail">
          <% if post.photos.first %>
            <%= link_to image_tag(post.photos.first.image.url), post_path(post) %>
          <% else %>
            N/A
          <% end %>
          <div class="caption">
            <p style="text-align: center;">
              <%= post.caption %>
              <%= link_to "Show", post_path(post) %>
              <%= link_to "Edit", edit_post_path(post) %>
              <%= link_to "Delete", post,
                          :data => { :confirm => "Are you sure?" },
                          :method => :delete
              %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>