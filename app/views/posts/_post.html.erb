<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="user-name">
        <%= post.user.user_name %>
      </div>
      <div class="time-ago"> <%= time_ago_in_words(post.created_at) %></div>
    </div>
    <div class="image center-block">
      <% if post.photos.count <= 1 %>
        <%= link_to (image_tag post.photos.image.url(:medium), class: 'd-block w-100'), post_path(post) %>
      <% else %>
        <%= render 'photo_carousel', post: post %>
      <% end %>
    </div>
    <div class="post-bottom">
      <div class="caption">
        <div class="caption-content">
          <div class="user-name">
            <%= post.user.user_name %>
          </div>
          <%= post.caption %>
        </div>
      </div>
      <div class="comments" id="comments_<%= post.id %>">
        <% if post.comments.any? %>
          <%= render post.comments, post: post %>
        <% end %>
      </div>
    </div>
    <div class="comment-like-form row">
      <div class="like-button col-sm-1">
        <i class="far fa-heart"></i>
      </div>
      <div class="comment-form col-sm-11">
        <%= form_for [post, post.comments.build], remote: true do |f| %>
          <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{post.id}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>