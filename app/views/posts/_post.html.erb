<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="user-name">
        <%= post.user.user_name %>
      </div>
      <div class="time-ago"> <%= time_ago_in_words(post.created_at) %></div>
    </div>
    <div class="image center-block">
      <% if post.photos.count <= 1 %>
        <%= link_to (image_tag post.photos.image.url(:medium), class: 'd-block w-100'), post_path(post) %>
      <% else %>
        <%= render 'photo_carousel', post: post %>
      <% end %>
    </div>
    <div class="post-bottom">
      <div class="caption">
        <div class="caption-content">
          <%= post.caption %>
        </div>
      </div>
    </div>

  </div>
</div>