<div id="carouselIndicators-<%= post.id %>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% post.photos.each do |photo| %>
      <% if photo.position == 0 %>
        <div class="carousel-item active">
          <%= link_to (image_tag photo.image.url(:medium), class: 'd-block w-100'), post_path(post) %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= link_to (image_tag photo.image.url(:medium), class: 'd-block w-100'), post_path(post) %>
        </div>
      <% end %>
    <% end %>
  </div>
  <% if post.photos.count > 1 %>
    <ol class="carousel-indicators">
      <% post.photos.each do |photo| %>
        <% if photo.position == 0 %>
          <li data-target="#carouselIndicators-<%= post.id %>" data-slide-to="0" class="active"></li>
        <% else %>
          <li data-target="#carouselIndicators-<%= post.id %>" data-slide-to="<%= photo.position %>"></li>
        <% end %>
      <% end %>
    </ol>
    <a class="carousel-control-prev" href="#carouselIndicators-<%= post.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators-<%= post.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  <% end %>
</div>