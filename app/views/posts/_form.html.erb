<%= simple_form_for @post, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <div class="control-group">
    <div class="controls">
      <!-- The magic is coming ...look at my eyes....shazammmm -->
      <%= f.input :images, as: :file, input_html: {name: 'images[]', multiple: true} %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.input :caption, label:false, placeholder: 'Add your caption' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-success btn-block' %>
    <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
  </div>
<% end %>